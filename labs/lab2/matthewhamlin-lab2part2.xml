<?xml version="1.0"?> 
<?xml-stylesheet type="text/css" href="matthewhamlinlab2part4.css"?>
<root_element xmlns:html="http://www.w3.org/1999/xhtml">
<xml>
  <head>
    <title>My Favourite Four Tracks</title>
  </head>
  <body>
  <!-- since you can make almost anything a tag in xml, i figured the easiest way 
    was to make each tag as simple to read by the machine and the person so i simplified
    the names of the tags to the data they represent -->
    <div id="song1" style=" padding: 20px;">
      <div class="albumcover" style=" display: inline;">
        <html:img src="http://upload.wikimedia.org/wikipedia/en/e/e0/Bon_iver_album_cover.jpg" alt="FEFA" style="float: right; clear: right; height: 120px; width: 120px"></html:img>
      </div>
      <div class="trackname">
        Re:Stacks
      </div>
      <div class="artist">
        Bon Iver
      </div>
      <div class="albumname">
        For Emma, Forever Ago
      </div>
      <div class="releasedate">
        2007
      </div>
      <div class="genre">
        <ul>
          <li>Indie Folk Rock</li>
        </ul>
      </div>
      <div class="link">
        <html:a href="http://boniver.org/">Bon Iver</html:a>
      </div>
    </div>
    <div id="song2" style=" padding: 20px;">
      <div class="albumcover" style=" display: inline;">
        <html:img src="http://upload.wikimedia.org/wikipedia/en/8/83/Yeezus_Kanye_West.jpg" alt="Yeezus" style="float: right; clear: right; height: 120px; width: 120px"></html:img>
      </div>
      <div class="trackname">
        Bound 2
      </div>
      <div class="artist">
        Kanye West
      </div>
      <div class="albumname">
        Yeezus
      </div>
      <div class="releasedate">
        2013
      </div>
      <div class="genre">
        <ul>
          <li>Hip Hop</li>
        </ul>
      </div>
      <div class="link">
        <html:a href="http://www.kanyewest.com/">Kanye West</html:a>
      </div>
    </div>
    <div id="song3" style=" padding: 20px;">
      <div class="albumcover" style=" display: inline;">
        <html:img src="http://www.localsuicide.com/wp-content/uploads/2013/04/jai-paulbanner.jpg" alt="Partial image of album cover" style="float: right; clear: right; height: 120px; width: 120px"></html:img>
      </div>
      <div class="trackname">
        Jasmine
      </div>
      <div class="artist">
        Jai Paul
      </div>
